{{#if resume.work.length}}
<section id="work">
	<h2>Experience</h2>
	{{#each resume.work}}
	<div class="item">
		
		<div class="position">
			{{#if position}}
 			<strong>{{position}},</strong>
			{{/if}} 
			{{#if company}}
			<span>{{company}}</span>
			{{/if}}
		</div>
		<div class="date">
			{{#if startDate}}
			<span class="startDate">{{startDate}}</span>
			{{/if}}
			{{#if endDate}}
			<span class="endDate"> - {{endDate}}</span>
			{{else}}
			<span class="endDate">- Present</span>
			{{/if}}
		</div>
		{{#if summary}}
		<p>{{summary}}</p>
		{{/if}}
		{{#if highlights.length}}
		<ul class="highlights">
		{{#each highlights}}
			<li>{{.}}</li>
		{{/each}}
		</ul>
		{{/if}}
	</div>
	
	{{/each}}
</section>
{{/if}}